<div class="section">
<%= simple_form_for @budget do |f| %>
  <div class="field">
    <div class="control">
      <%= f.input :name, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.input :description, input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label' }  %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= select_tag 'users', options_from_collection_for_select(@users, "id", "user_name") %>
    </div>
  </div>

  <%= f.button :submit, 'Create new budget', class: "button is-primary" %>
<% end %>
</div>