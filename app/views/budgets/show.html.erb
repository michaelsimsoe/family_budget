<% content_for :page_title, @budget.name %>

<section class="section">
    <div class="container">
        <nav class="level">
          <!-- Left side -->
          <div class="level-left">
            <p class="level-item">
                <strong>Actions</strong>
            </p>
          </div>
          <!-- Right side -->
          <div class="level-right">
              <p class="level-item">
                <%= link_to "Edit", edit_budget_path(@budget), class:"button" %>
              </p>
              <p class="level-item">
                <%= link_to "Delete", budget_path(@budget), method: :delete, data: { confirm: "Are you sure?" }, class:"button is-danger" %>
                </p>
          </div>
        </nav>
        <hr/>

        <div class="content">
            <%= @budget.description %>
        </div>
    </div>
</section>

<section class="section comments">
    <div class="container">
        <h2 class="subtitle is-5"><strong><%= @budget.expenses.count %></strong> Expenses</h2>
        
        <div class="box">
          <article class="media">
            <div class="media-content">
              <table class="table is-fullwidth">
                <thead>
                  <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Amount</th>
                    <th>Delete</th>
                  </tr>
                </thead>
                <tbody>
                    <% @budget.expenses.each do |expense| %>
                    <tr>
                      <td><%= expense.title %></td>
                      <td><%= expense.description %></td>
                      <td><%= expense.amount %></td>
                      <td><%= link_to 'Delete', [expense.budget, expense],
                            method: :delete, class: "button is-danger", data: { confirm: 'Are you sure?' } %> 
                      </td>
                    </tr>
                    <% end %>
                </tbody>
              </table>
            </div>
          </article>
        </div>
        
        <div class="comment-form">
            <hr />
            <h3 class="subtitle is-3">Add an expense</h3>
             <%= render 'expenses/form' %>
        </div>
    </div>
</section>