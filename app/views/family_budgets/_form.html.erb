<%= form_for @family_budget do |f| %>
		<div class="form-group">
			<%= f.label :name%>
			<%= f.text_field :name, class: "form-control", placeholder: "Name" %>
		</div>
		<div class="form-group">
			<%= f.label :description%>
			<%= f.text_area :description, class: "form-control", placeholder: "Description"%>
		</div>
		<div class="form-group">
			<%= f.submit class: "btn btn-primary" %>
		</div>
<% end %>