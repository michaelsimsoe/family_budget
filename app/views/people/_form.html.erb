<%= form_for @person do |f| %>
		<div class="form-group">
			<%= f.label :name%>
			<%= f.text_field :name, class: "form-control", placeholder: "Name" %>
		</div>
		<div class="form-group">
			<%= f.label :description%>
			<%= f.text_area :description, class: "form-control", placeholder: "Description"%>
		</div>
		<div class="form-group">
			<%= f.label :disposable_amount%>
			<%= f.number_field :disposable_amount, class: "form-control", placeholder: "Disposable Amount"%>
		</div>
		<div class="form-group">
			<%= f.submit %>
		</div>
<% end %>