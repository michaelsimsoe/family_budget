<%= form_for @new_person_budget_notation,  :html => { :class => "form-inline" }, remote: true do |f| %>

		<div class="form-group">
			<%= f.label :title, class: "sr-only" %>
			<%= f.text_field :title, class: "form-control", placeholder: "Title" %>

			<%= f.label :description, class: "sr-only" %>
			<%= f.text_field :description, class: "form-control", placeholder: "Description" %>

			<%= f.label :amount, class: "sr-only" %>
			<%= f.number_field :amount, class: "form-control", placeholder: "Amount" %>

			<%= f.radio_button :notation_type, "deposit", class: "form-control radio-inline" %>
			<%= f.label :notation_type, "Deposit" %>
			<%= f.radio_button :notation_type, "withdrawal", class: "form-control radio-inline" %>
			<%= f.label :notation_type, "Withdrawal" %>
		</div>
		
		<div class="form-group">
			<%= f.hidden_field :person_id, :value => p.id %>
			<%= f.submit "Add", class: "btn btn-primary btn new-btn" %>
		</div>

<% end %>