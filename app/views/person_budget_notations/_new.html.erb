<%= form_for @new_person_budget_notation,  :html => { :class => "form-inline" }, remote: true do |f| %>

		<div class="form-group">
			<%= f.label :title, class: "sr-only" %>
			<%= f.text_field :title, class: "form-control", placeholder: "Title" %>

			<%= f.label :description, class: "sr-only" %>
			<%= f.text_field :description, class: "form-control hidden-sm hidden-xs", placeholder: "Description" %>

			<%= f.label :amount, class: "sr-only" %>
			<%= f.number_field :amount, class: "form-control", placeholder: "Amount" %>

			<%= f.radio_button :notation_type, "deposit", checked: true, class: "form-control radio-inline", id: "deposit" %>
			<%= f.label :notation_type, "Inn" %>
			<%= f.radio_button :notation_type, "withdrawal",  class: "form-control radio-inline", id: "withdrawal" %>
			<%= f.label :notation_type, "Out" %>
		</div>

		<div class="form-group hidden" id="select-group">
			<%= f.select( :sub_budget_id, options_for_select(budget.sub_budgets.map {|sb| sb.title }), prompt: "Transfer to a sub budget?" ) %>
		</div>
		
		<div class="form-group">
			<%= f.hidden_field :person_id, :value => p.id %>
			<%= f.submit "Add", class: "btn btn-primary btn new-btn" %>
		</div>

<% end %>