	  <td><%= pbn.title %></th>
	  <td class="hidden-sm hidden-xs""><%= pbn.description %></td>
	  <td><%= pbn.amount %></td>
	  <td>
	  	<%= link_to "Edit", edit_person_budget_notation_path(id: pbn.id), remote: true, class: "btn btn-primary btn-xs", "data-toggle" => "modal", "data-target" => "#myModal" %>
			<%= link_to "Delete", person_budget_notation_path(id: pbn.id), remote: true, class: "btn btn-danger btn-xs",method: :delete %>
	  </td>
	</tr>
<% end %>
