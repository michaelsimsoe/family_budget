<div class="section">
  <%= simple_form_for(:session, url: login_path) do |f| %>
  <div class="field">
    <div class="control">
      <%= f.input :email, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' }  %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.input :password, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' }  %>
    </div>
  </div>

  <%= f.button :submit, 'Log In', class: "button is-primary" %>
  <% end %>
</div>