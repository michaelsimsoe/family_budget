<%= form_for @new_sub_budget_notation,  :html => { :class => "form-inline" }, remote: true do |f| %>

		<div class="form-group">
			<%= f.label :title, class: "sr-only" %>
			<%= f.text_field :title, class: "form-control", placeholder: "Title" %>

			<%= f.label :description, class: "sr-only" %>
			<%= f.text_field :description, class: "form-control hidden-sm hidden-xs", placeholder: "Description" %>

			<%= f.label :amount, class: "sr-only" %>
			<%= f.number_field :amount, class: "form-control", placeholder: "Amount" %>
		</div>
		<div class="form-group">
			<%= f.radio_button :notation_type, "deposit", class: "form-control radio-inline" %>
			<%= f.label :notation_type, "Inn" %>
			<%= f.radio_button :notation_type, "withdrawal", checked: true,  class: "form-control radio-inline" %>
			<%= f.label :notation_type, "Out" %>
		</div>
		
		<div class="form-group">
			<%= f.hidden_field :sub_budget_id, :value => sb.id %>
			<%= f.submit "Add", class: "btn btn-primary btn new-btn" %>
		</div>

<% end %>
