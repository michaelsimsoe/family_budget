<% if @users %>
  <% if @users.size > 0 %>
      <table class="search-results-table col-md-12">
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><strong>Name:</strong> <%= user.full_name %></td>
              <td><strong>Email:</strong> <%= user.email %></td>
              <td>
                <% if !user.user_budgets.present? %>
                  <% if current_user.family_budget.present? %>
                    <%= link_to "Add this user to budget", add_user_path(user: user, family_budget: current_user.family_budget.id),
                                                    class: "", method: :post %>
                  <% elsif current_user.family_budgets.present? %>
                    <%= link_to "Add this user to budget", add_user_path(user: user, family_budget: @family_budget),
                                                    class: "", method: :post %>
                  <% end %>
                <% else %>
                User already added
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
<% end %>
